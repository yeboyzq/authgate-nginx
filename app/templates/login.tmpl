        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: linear-gradient(135deg, #1e5799 0%, #207cca 51%, #2989d8 100%);
            padding: 20px;
        }

        .container {
            display: flex;
            width: 900px;
            height: 550px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            margin: auto;
        }

        .login-section {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .brand {
            margin-bottom: 40px;
        }

        .brand h1 {
            color: #1e5799;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .brand p {
            color: #6c757d;
            font-size: 14px;
        }

        .login-form {
            width: 100%;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #495057;
            font-size: 14px;
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #e1e5ee;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s;
        }

        .form-group input:focus {
            outline: none;
            border-color: #1e5799;
            box-shadow: 0 0 0 3px rgba(30, 87, 153, 0.1);
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 40px;
            cursor: pointer;
            color: #6c757d;
        }

        .login-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(to right, #1e5799, #2989d8);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(30, 87, 153, 0.2);
            margin-top: 10px;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(30, 87, 153, 0.3);
        }

        .login-btn:active {
            transform: translateY(0);
        }

        .error {
            color: #e74c3c;
            margin-top: 15px;
            padding: 10px;
            background-color: #fdf2f2;
            border-radius: 5px;
            border-left: 4px solid #e74c3c;
            display: none;
            font-size: 14px;
        }

        .graphic-section {
            flex: 1;
            background: linear-gradient(to bottom right, #1e5799, #2989d8);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .graphic-content {
            text-align: center;
            z-index: 2;
        }

        .graphic-content h2 {
            font-size: 32px;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .graphic-content p {
            font-size: 16px;
            line-height: 1.6;
            opacity: 0.9;
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
        }

        .circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
        }

        .circle-1 {
            width: 150px;
            height: 150px;
            top: 10%;
            left: 20%;
        }

        .circle-2 {
            width: 100px;
            height: 100px;
            bottom: 15%;
            right: 20%;
        }

        .circle-3 {
            width: 70px;
            height: 70px;
            top: 60%;
            left: 10%;
        }

        .footer {
            text-align: center;
            color: rgba(255, 255, 255, 0.8);
            padding: 20px 0;
            font-size: 14px;
            margin-top: 20px;
        }

        .footer a {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer a:hover {
            color: white;
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                height: auto;
                width: 100%;
            }

            .graphic-section {
                padding: 30px 20px;
            }

            .login-section {
                padding: 40px 30px;
            }

            .footer {
                padding: 15px 0;
            }
        }
    </style>
</head>

